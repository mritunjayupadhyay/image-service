{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true,
      "noImplicitAny": true,
      "preserveConstEnums": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "dist"]
  }